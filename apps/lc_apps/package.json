{
  "name": "lc-apps",
  "version": "1.0.0",
  "private": true,
  "description": "LastChaos Portal & Admin Frontend System - Monorepo",
  "scripts": {
    "dev": "pnpm --parallel --filter './web-*' dev",
    "build": "pnpm --filter './web-*' --filter './shared' build",
    "lint": "pnpm --recursive --filter './web-*' --filter './shared' lint",
    "test": "pnpm --recursive --filter './web-*' --filter './shared' test",
    "clean": "pnpm --recursive --filter './web-*' --filter './shared' clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "pnpm --recursive --filter './web-*' --filter './shared' type-check"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2",
    "eslint": "^9.18.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
