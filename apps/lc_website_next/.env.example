# -------------------------------
# Portal Database (MySQL 8.0)
# -------------------------------
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_PASSWORD=change_this_password
DATABASE_URL="mysql://portal_user:change_this_password@localhost:3306/portal_db"

# -------------------------------
# Legacy Database (MySQL 5.7)
# -------------------------------
LEGACY_ROOT_PASSWORD=change_this_legacy_root_password
LEGACY_PASSWORD=readonly_pass

# -------------------------------
# Redis (Rate Limiting & Caching)
# -------------------------------
# For local development with Docker:
REDIS_URL="redis://localhost:6379"
# For production, adjust host accordingly
# If not set, falls back to in-memory rate limiting

# -------------------------------
# Mail (SMTP + Mailhog for Development)
# -------------------------------
# For local development with Mailhog:
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@example.com"
# Mailhog Web UI: http://localhost:8025

# For production, use real SMTP:
# SMTP_HOST="smtp.mailgun.org"
# SMTP_PORT=587
# SMTP_USER="postmaster@yourdomain.com"
# SMTP_PASSWORD="your-smtp-password"
# SMTP_FROM="noreply@yourdomain.com"

# -------------------------------
# Auth.js Configuration
# -------------------------------
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="super-secret-auth-key-change-this-in-production"

# -------------------------------
# Admin Token
# -------------------------------
ADMIN_TOKEN="super-secret-admin-token"

# -------------------------------
# Legacy Game DB Read-Only Connections
# -------------------------------
# Optional: Fallback if not in GameServer table
# For local Docker legacy-db:
GAME_DB1_HOST="localhost"
GAME_DB1_PORT="3307"
GAME_DB1_DATABASE="lc_game"
GAME_DB1_USER="readonly_user"
GAME_DB1_PASSWORD="readonly_pass"

# Additional servers (optional):
# GAME_DB2_HOST="localhost"
# GAME_DB2_PORT="3306"
# GAME_DB2_DATABASE="db_auth"
# GAME_DB2_USER="readonly_user"
# GAME_DB2_PASSWORD="readonly_pass"

# -------------------------------
# PayPal Configuration (Phase 4)
# -------------------------------
# Get credentials from https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox"  # or 'live' for production
PAYPAL_WEBHOOK_ID="your_webhook_id"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
